<UserControl x:Class="Silverlight_MVC.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:DietCalculatorView_v1 ="clr-namespace:Silverlight_MVC"
    xmlns:DietCalculatorView_v2 ="clr-namespace:Silverlight_MVC"
    Width="1040" Height="400">
	<Grid x:Name="LayoutRoot" Background="White">
		<StackPanel Orientation="Horizontal">
			<DietCalculatorView_v1:DietCalculatorView_v1 Margin="10,10,0,0" x:Name="calculatorView_v1">
			</DietCalculatorView_v1:DietCalculatorView_v1>
			<DietCalculatorView_v2:DietCalculatorView_v2 Margin="10,10,0,0" x:Name="calculatorView_v2">
			</DietCalculatorView_v2:DietCalculatorView_v2>
		</StackPanel>
	</Grid>
</UserControl>
